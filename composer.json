{
    "name": "johncms/system",
    "description": "JohnCMS Core Framework",
    "type": "library",
    "homepage": "https://johncms.com",
    "license": "GPL-3.0-only",
    "keywords": [
        "johncms",
        "cms"
    ],
    "require": {
        "php": "^7.2",
        "ext-pdo": "*",
        "mobicms/render": "^1.1",
        "nikic/fast-route": "^1.3",
        "zendframework/zend-config-aggregator": "^1.1",
        "zendframework/zend-i18n": "^2.10",
        "zendframework/zend-servicemanager": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "^3.5",
        "mikey179/vfsstream": "^1.6",
        "vimeo/psalm": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Johncms\\System\\": "src/"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/constants.php"
        ],
        "psr-4": {
            "JohncmsTests\\System\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@psalm",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
