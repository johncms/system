{
    "name": "johncms/system",
    "description": "JohnCMS Core Framework",
    "type": "library",
    "homepage": "https://johncms.com",
    "license": "GPL-3.0-only",
    "keywords": [
        "johncms",
        "cms"
    ],
    "require": {
        "php": "^7.2",
        "ext-pdo": "*",
        "mobicms/render": "^1.1",
        "nikic/fast-route": "^1.3",
        "zendframework/zend-config-aggregator": "^1.1",
        "zendframework/zend-i18n": "^2.10",
        "zendframework/zend-servicemanager": "^3.4",
        "guzzlehttp/psr7": "^1.6"
    },
    "require-dev": {
        "codeception/codeception": "^3.1",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "mikey179/vfsstream": "^1.6",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Johncms\\System\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit/"
        }
    },
    "scripts": {
        "check": [
            "@lint",
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "lint": "parallel-lint src",
        "psalm": "psalm",
        "test": "codecept run",
        "test-coverage": "codecept run --coverage-xml"
    }
}
